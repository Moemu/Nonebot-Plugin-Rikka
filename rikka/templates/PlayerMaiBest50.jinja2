<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Maimai B50</title>
  <base href="{{ base_href }}">
  <link href="static/output.css" rel="stylesheet">
  <style>
    @font-face {
      font-family: ResourceHanRoundedCN;
      font-style: normal;
      font-weight: 700;
      font-display: swap;
      src: url("static/ResourceHanRoundedCN-Bold.ttf") format("truetype");
    }
    @font-face {
      font-family: Torus_SemiBold;
      font-style: normal;
      font-weight: 600;
      font-display: swap;
      src: url("static/Torus SemiBold.otf") format("opentype");
    }
  </style>
</head>
<body>
  {% from 'components/player_header.html.jinja2' import player_header %}
  {% from 'components/score_card.html.jinja2' import score_card %}

  <section class="relative mx-auto h-[1600px] w-[1400px] overflow-hidden rounded-[2rem] border border-white/50 shadow-[0_45px_120px_-40px_rgba(14,165,233,0.35)]">
    {# 背景图 #}
    <img
      src="static/mai/pic/b50_bg.png"
      alt="maimai background"
      class="absolute inset-0 w-full h-full object-cover"
    />

    <div class="relative flex h-full flex-col">
      {# Header #}
      <div class="flex items-center gap-4 pt-6">
        <img
          src="static/mai/pic/logo.png"
          alt="maimai Logo"
          width="332"
          height="160"
          class="object-contain"
        />
        {{ player_header(player) }}
      </div>

      {# Best 35 #}
      <div class="p-4 pt-6">
        <div class="grid grid-cols-5 gap-2">
          {% for score in best35 %}
            {{ score_card(score) }}
          {% endfor %}
        </div>
      </div>

      {# Best 15 #}
      <div class="p-4 pt-4">
        <div class="grid grid-cols-5 gap-2">
          {% for score in best15 %}
            {{ score_card(score) }}
          {% endfor %}
        </div>
      </div>

      {# Footer #}
      <footer class="relative mx-6 mt-auto p-6 text-center">
        <p
          class="mx-auto max-w-full font-[Torus_SemiBold] text-2xl font-[1000] text-sky-400"
          style="text-shadow: 2px 0 0 #FFF, 0 0 2px #FFF, 0 2px 0 #FFF, -2px 0 0 #FFF, 0 -2px 0 #FFF;"
        >
          Original Designed by Yuri-YuzuChaN & BlueDeer233 & TomeChen. Generated by Nonebot-Plugin-Rikka
        </p>
      </footer>
    </div>
  </section>
</body>
</html>